<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReleasePostActivity">

    <EditText
        android:id="@+id/release_page_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:minHeight="200dp"
        android:ems="10"
        android:layout_below="@+id/textView4"
        android:background="@drawable/borders_multiline_text"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="30dp"
        android:text="@string/write_photo_description" />

    <ImageButton
        android:id="@+id/release_page_choose_album"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/release_page_text"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/release_page_release_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_button_short_press"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_below="@id/release_page_text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/release" />

</RelativeLayout>