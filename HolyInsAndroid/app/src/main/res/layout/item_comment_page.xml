<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commentpage_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/comment_page_head_pic"
            android:textSize="35dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:text="TextView" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_page_head_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_user_click"
            app:civ_border_color="@color/a_little_white"
            app:civ_border_width="2dp" />
    </RelativeLayout>

</RelativeLayout>