<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_page_forward_send_btn"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/main_page_forward_et"
            android:background="@drawable/selector_button_short_press"
            android:text="@string/send"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/main_page_forward_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_edit_text_shape"
            android:ems="10"
            android:hint="@string/forward_default_content"
            android:inputType="textPersonName" />
    </RelativeLayout>

</RelativeLayout>